{
    "name": "zero-config/cli",
    "description": "CLI tooling with zero configuration required.",
    "keywords": [
        "cli",
        "zero configuration",
        "grep",
        "pgrep",
        "pipeline",
        "pipe"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jan-Marten de Boer",
            "role": "developer"
        }
    ],
    "minimum-stability": "stable",
    "bin": ["bin/grep", "bin/pgrep"],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "mediact/testing-suite": "@stable"
    },
    "autoload": {
        "files": [
            "src/file.php",
            "src/grep.php",
            "src/pgrep.php",
            "src/pipe.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ZeroConfig\\Cli\\Tests\\": "tests"
        }
    },
    "extra": {
        "grumphp": {
            "config-default-path": "vendor/mediact/testing-suite/config/default/grumphp.yml"
        }
    },
    "archive": {
        "exclude": [
            "/.gitignore",
            "/phpunit.xml",
            "/phpmd.xml",
            "/phpstan.neon",
            "/phpcs.xml",
            "/tests",
            "/bitbucket-pipelines.yml"
        ]
    }
}
