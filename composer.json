{
    "name": "zero-config/cli",
    "description": "CLI tooling with zero configuration required.",
    "keywords": [
        "cli",
        "zero configuration",
        "grep",
        "pgrep",
        "pipeline",
        "pipe"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jan-Marten de Boer",
            "role": "developer"
        }
    ],
    "minimum-stability": "stable",
    "bin": [
        "bin/zc"
    ],
    "require": {
        "php": "^7.1",
        "ext-SPL": "^7.1"
    },
    "require-dev": {
        "ext-Phar": "^2.0",
        "ext-zlib": "^7.1",
        "ext-pcre": "^7.1",
        "mediact/testing-suite": "@stable",
        "mikey179/vfsstream": "^1.6"
    },
    "suggest": {
        "ext-zlib": "To handle Gzip encoded source files.",
        "ext-pcre": "To use PCRE transformers."
    },
    "autoload": {
        "files": [
            "src/constants.php"
        ],
        "psr-4": {
            "ZeroConfig\\Cli\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZeroConfig\\Cli\\Tests\\": "tests"
        }
    },
    "extra": {
        "grumphp": {
            "config-default-path": "vendor/mediact/testing-suite/config/default/grumphp.yml"
        }
    },
    "archive": {
        "exclude": [
            "/.gitignore",
            "/.gitattributes",
            "/box.json",
            "/Makefile",
            "/phpunit.xml",
            "/phpmd.xml",
            "/phpstan.neon",
            "/phpcs.xml",
            "/tests",
            "/bitbucket-pipelines.yml"
        ]
    }
}
